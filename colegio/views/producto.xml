<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="productos_form_view_inherit" model="ir.ui.view">
        <field name="name">productos.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']" position="inside">
                <field name="producto_venta_publico" />
				<field name="producto_venta_campana" />
				<field name="producto_venta_ofertas" />
				<field name="producto_venta_empleados" />
           </xpath>
       </field>
   </record>
</odoo>
